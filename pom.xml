<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.mira</groupId>
    <artifactId>test</artifactId>

    <!-- IMPORTANT NOTE: DO NOT use maven versions plugin for versioning; see README.md for instructions. -->
    <version>${revision}</version>
    <packaging>pom</packaging>

    <name>test</name>

    <properties>
        <!-- To update version only this property needs changing -->
        <revision>6.80.0</revision>

        <!-- Specify source and target as java 17 -->
        <java.version>17</java.version>
        <maven.compiler.target>${java.version}</maven.compiler.target>
        <maven.compiler.source>${java.version}</maven.compiler.source>
        <maven.compiler.useIncrementalCompilation>false</maven.compiler.useIncrementalCompilation>
        <!-- Generic config for other plugins -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

    </properties>

</project>

